{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "baseUrl": "src",
    "outDir": "dist",
    "allowJs": false,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strict": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./custom_typings"],
    "paths": {
      "@apiRenderer/*": [ "./kerbolAPI/renderer/*" ],
      "@apiMain/*": [ "./kerbolAPI/main/*" ],
      "@apiActions": [ "./kerbolAPI/actions" ],
      "*": [ "./*" ]
    }
  },
  "include": [
    "src/**/*"
  ]
}

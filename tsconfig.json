{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "target": "ES2017",
    "noImplicitAny": true,
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@apiRenderer/*": [ "./src/kerbolAPI/renderer/*" ],
      "@apiMain/*": [ "./src/kerbolAPI/main/*" ],
      "@apiActions": [ "./src/kerbolAPI/actions" ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
